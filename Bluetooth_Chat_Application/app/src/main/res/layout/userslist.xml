<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/usericonimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/usericon" />


    <TextView
        android:id="@+id/calltext"
        android:layout_width="74dp"
        android:layout_height="16dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:text="Call"
        android:textColor="@color/background"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toEndOf="@+id/callbtn"
        app:layout_constraintTop_toBottomOf="@+id/user" />

    <TextView
        android:id="@+id/messagetext"
        android:layout_width="70dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="message"
        android:textColor="@color/background"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/messagebtn"
        app:layout_constraintTop_toBottomOf="@+id/user" />

    <ImageButton
        android:id="@+id/callbtn"
        android:layout_width="57dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/call_icon"
        app:layout_constraintStart_toEndOf="@+id/messagetext"
        app:layout_constraintTop_toBottomOf="@+id/user"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/messagebtn"
        android:layout_width="38dp"
        android:layout_height="14dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/drawable_message_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/user"
        android:layout_width="123dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="User name"
        app:layout_constraintStart_toEndOf="@+id/usericonimage"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>