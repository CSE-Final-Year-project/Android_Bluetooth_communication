<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    android:background="@color/background">

    <include
        android:id="@+id/actiontoolbar"
        layout="@layout/toolbar"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="4dp" />

    <ScrollView
        android:id="@+id/scrole"
        android:layout_width="352dp"
        android:layout_height="435dp"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actiontoolbar">

        <LinearLayout
            android:id="@+id/my_message_pane_layout"
            android:layout_width="300dp"
            android:layout_height="459dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/speech_bubble_corners"
            android:layout_marginRight="@dimen/speech_bubble_corners"
            android:background="@drawable/shape"
            android:orientation="vertical">

            <TextView
                android:layout_width="131dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/text_messages_shape"
                android:paddingBottom="50dp"
                android:text="klhashh;lafoiewytowtbo;hikwehiolwghlwgkn" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/your_message_shape"
                android:paddingBottom="50dp"
                android:text="klhashh;lafoiewytowtbo;hikwehiolwghlwgkn" />
        </LinearLayout>
    </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/type_message"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:hint="Type your message"
                android:minHeight="48dp" />

            <Button
                android:layout_width="111dp"
                android:layout_height="55dp"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:minWidth="48dp"
                android:text="Send"
                android:layout_marginLeft="2dp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>