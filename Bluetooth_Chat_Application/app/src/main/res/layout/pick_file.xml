<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/yours_color"

    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/document"
        android:layout_width="60dp"
        android:layout_height="57dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/document_file"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/camera"
        android:layout_width="60dp"
        android:layout_height="57dp"
        android:layout_marginStart="56dp"
        android:background="@drawable/camera_file_shape"
        app:layout_constraintStart_toEndOf="@+id/document"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagefile"
        android:layout_width="60dp"
        android:layout_height="57dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/galley_file"
        app:layout_constraintStart_toEndOf="@+id/camera"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/garellerylbl"
        android:layout_width="55dp"
        android:layout_height="25dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:text="Gallery"
        app:layout_constraintStart_toEndOf="@+id/cameralbl"
        app:layout_constraintTop_toBottomOf="@+id/imagefile"
        tools:text="Gallery" />

    <TextView
        android:id="@+id/documentlbl"
        android:layout_width="78dp"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:text="Document"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/document"
        tools:text="Document" />

    <TextView
        android:id="@+id/cameralbl"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="12dp"
        android:text="Camera"
        app:layout_constraintStart_toEndOf="@+id/documentlbl"
        app:layout_constraintTop_toBottomOf="@+id/camera"
        tools:text="Camera" />
</androidx.constraintlayout.widget.ConstraintLayout>